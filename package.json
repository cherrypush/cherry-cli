{
  "name": "cherrypush",
  "version": "2.0.0",
  "description": "Cherry CLI to manage your technical debt via cherrypush.com üçí",
  "source": "./bin/cherry.ts",
  "type": "module",
  "bin": {
    "cherry": "./dist/bin/cherry.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "cherry": "tsx ./bin/cherry.ts",
    "prepare": "husky install && npm run build",
    "bump": "npm version patch && npm publish",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watchAll",
    "lint": "eslint . --ext .js,.ts",
    "test": "sh test/fixtures/setup.sh && vitest run",
    "test:setup": "sh test/fixtures/setup.sh",
    "test:cleanup": "sh test/fixtures/cleanup.sh",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cherrypush/cherry-cli.git"
  },
  "author": {
    "name": "Flavio Wuensche",
    "email": "f.wuensche@gmail.com",
    "url": "https://twitter.com/fwuensche"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fwuensche/cherry-cli/issues"
  },
  "homepage": "https://github.com/fwuensche/cherry-cli#readme",
  "dependencies": {
    "axios": "^1.2.3",
    "commander": "^10.0.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.0",
    "find-up": "^6.3.0",
    "glob": "^8.1.0",
    "lodash": "^4.17.21",
    "madge": "^8.0.0",
    "minimatch": "^6.1.6",
    "p-limit": "^4.0.0",
    "prompt": "^1.3.0",
    "spinnies": "^0.5.1",
    "true-case-path": "^2.2.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.js": "eslint --fix"
  }
}
